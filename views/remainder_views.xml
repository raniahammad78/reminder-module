<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_remainder_record" model="ir.actions.act_window">
        <field name="name">Remainder Records</field>
        <field name="res_model">remainder.record</field>
        <field name="view_mode">list,kanban,form,pivot,calendar,graph</field>
        <field name="context">{'group_by': 'state', 'search_default_filter_open': 1}</field>
        <field name="domain">[('state', 'in', ('draft', 'confirmed'))]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Record!
            </p>
        </field>
    </record>

    <record id="action_remainder_dashboard" model="ir.actions.act_window">
        <field name="name">My Dashboard (Urgent)</field>
        <field name="res_model">remainder.record</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_filter_urgent': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No urgent reminders! Good job.
            </p>
        </field>
    </record>


    <record id="view_remainder_record_search" model="ir.ui.view">
        <field name="name">remainder.record.search</field>
        <field name="model">remainder.record</field>
        <field name="arch" type="xml">
            <search string="Search Reminders">
                <field name="product_name" string="Product"/>
                <field name="partner_number" string="Partner"/>
                <field name="purchase_deadline"/>
                <field name="user_id"/>
                <field name="days_to_deadline" string="Days Left"/>
                <field name="state" filter_domain="[('state','ilike',self)]"/>

                <separator/>

                <filter name="filter_overdue" string="Overdue" domain="[('days_to_deadline', '&lt;', 0)]"/>
                <filter name="filter_due_soon" string="Due in 30 Days"
                        domain="[('days_to_deadline', '&lt;=', 30), ('days_to_deadline', '&gt;=', 0)]"/>
                <filter name="filter_urgent" string="Urgent (7 Days)" domain="[('days_to_deadline', '&lt;=', 7)]"/>

                <separator/>

                <filter name="group_by_state" string="By Status" context="{'group_by':'state'}"/>
                <filter name="group_by_deadline" string="By Deadline (Year)"
                        context="{'group_by':'purchase_deadline:year'}"/>
                <filter name="filter_draft" string="Draft" domain="[('state','=','draft')]"/>
                <filter name="filter_confirmed" string="Confirmed" domain="[('state','=','confirmed')]"/>

                <searchpanel>
                    <field name="state" string="Status" enable_counters="1" icon="fa-tasks"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="view_remainder_record_pivot" model="ir.ui.view">
        <field name="name">remainder.record.pivot</field>
        <field name="model">remainder.record</field>
        <field name="arch" type="xml">
            <pivot string="Remainder Analysis (Pivot Table)">
                <field name="product_name" type="row"/>
                <field name="state" type="col"/>
                <field name="total_value" type="measure"/>
                <field name="quantity" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_remainder_record_calendar" model="ir.ui.view">
        <field name="name">remainder.record.calendar</field>
        <field name="model">remainder.record</field>
        <field name="arch" type="xml">
            <calendar string="Reminder Calendar" date_start="purchase_deadline" color="state">
                <field name="product_name"/>
                <field name="partner_number"/>
                <field name="total_value" widget="monetary"/>
            </calendar>
        </field>
    </record>

    <record id="view_remainder_record_graph" model="ir.ui.view">
        <field name="name">remainder.record.graph</field>
        <field name="model">remainder.record</field>
        <field name="arch" type="xml">
            <graph string="Remainder Analysis">
                <field name="product_name" type="row"/>
                <field name="total_value" type="measure"/>
                <field name="quantity" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_remainder_record_list" model="ir.ui.view">
        <field name="name">remainder.record.list</field>
        <field name="model">remainder.record</field>
        <field name="arch" type="xml">
            <list string="Remainder Records" default_group_by="state"
                  decoration-danger="state == 'cancelled' or days_to_deadline &lt; 0">
                <field name="partner_number" optional="show"/>
                <field name="product_name"/>
                <field name="purchase_deadline"/>
                <field name="days_to_deadline" string="Days Left"/>
                <field name="user_id"/>
                <field name="quantity"/>
                <field name="price" widget="monetary"/>
                <field name="total_value" widget="monetary"/>
                <field name="state" widget="badge"/>
                <field name="color" invisible="1"/>
            </list>
        </field>
    </record>

    <record id="view_remainder_record_kanban" model="ir.ui.view">
        <field name="name">remainder.record.kanban</field>
        <field name="model">remainder.record</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="state"/>
                <field name="color"/>
                <field name="total_value"/>
                <field name="currency_id"/>
                <field name="days_to_deadline"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click oe_kanban_card #{record.color.value ? 'oe_kanban_color_' + record.color.value : ''}">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="product_name"/>
                                    </strong>
                                    <div class="o_kanban_tags_section"/>
                                </div>
                            </div>

                            <div class="o_kanban_record_bottom mt-1">
                                <span class="text-muted">Partner:
                                    <field name="partner_number"/>
                                </span>
                            </div>

                            <div class="o_kanban_record_body">
                                <ul>
                                    <li>Responsible:
                                        <field name="user_id"/>
                                    </li>
                                    <li>Deadline:
                                        <field name="purchase_deadline"/>
                                    </li>
                                    <li>Days Left:
                                        <field name="days_to_deadline"/>
                                    </li>
                                    <li>Quantity:
                                        <field name="quantity"/>
                                    </li>
                                </ul>
                            </div>

                            <div class="o_kanban_footer">
                                <div class="float-right">
                                    <field name="total_value" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                </div>
                                <div class="o_kanban_record_meta">
                                    <field name="state" widget="label_selection"
                                           options="{'classes': {'draft': 'default', 'confirmed': 'info', 'cancelled': 'danger'}}"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_remainder_record_form" model="ir.ui.view">
        <field name="name">remainder.record.form</field>
        <field name="model">remainder.record</field>
        <field name="arch" type="xml">
            <form string="Remainder Record">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"
                            invisible="state not in ('draft')"/>
                    <button name="action_draft" string="Reset to Draft" type="object"
                            invisible="state not in ('confirmed', 'cancelled')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="product_name" placeholder="e.g. Product or license"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="partner_number" class="oe_inline"/>
                            <field name="purchase_deadline"/>
                            <field name="user_id"/>
                            <field name="days_to_deadline" readonly="1" string="Days Left"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="quantity"/>
                            <field name="total_value" readonly="1" class="oe_inline"
                                   widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>

                    <separator string="Reminder Configuration"/>
                    <group>
                        <field name="reminder_days_before"/>
                        <field name="reminder_recipient_email" widget="email"/>
                    </group>

                    <notebook>
                        <page name="notes" string="Internal Notes">
                            <field name="message_ids" widget="mail_thread"/>
                        </page>
                    </notebook>
                </sheet>

                <chatter/>

            </form>
        </field>
    </record>

</odoo>